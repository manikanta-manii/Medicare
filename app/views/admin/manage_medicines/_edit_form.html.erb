<%= form_with(url: medicines_path, method: :patch, remote: true , id: "edit_form") do |f| %>
  <div class="form-group">
    <%= f.label :image, "Medicine Image", class: "form-control-label" %>
    <%= f.file_field :image, class: "form-control",id: "medicine_image" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Name", class: "form-control-label" %>
    <%= f.text_field :name, class: "form-control",  id: "medicine_name" %>
  </div>
  
  <div class="form-group">
    <%= f.label :description, "Description", class: "form-control-label" %>
    <%= f.text_field :description, class: "form-control",  id: "medicine_description" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Price", class: "form-control-label" %>
    <%= f.text_field :price, class: "form-control",  id: "medicine_price" %>
  </div>

  <div class="form-group">
    <%= f.label :dosage, "Dosage", class: "form-control-label" %>
    <%= f.text_field :dosage, class: "form-control",  id: "medicine_dosage" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity, "Quantity", class: "form-control-label" %>
    <%= f.text_field :quantity, class: "form-control",  id: "medicine_quantity" %>
  </div>

  <div class="form-group">
    <%= f.label :need_prescription, "Need Prescription", class: "form-control-label" %>
    <%= f.select :need_prescription, [['Yes', true], ['No', false]], include_blank: "Select", class: "form-control", id: "medicine_need_prescription" %>
  </div>
   
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary", id: "submit-btn" %>
  </div>
<% end %>
