
<style>
   .doctor-cards-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  width: 100%;

}

.doctor-card {
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin: 5px;
  width: 300px; 
  display: flex;
  flex-direction: column;
}

.avatar-container {
 
  position: relative;
  padding-bottom: 100%;
}

.doctor-image {

  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.doctor-card:hover {
  transform: scale(1.02); 
}

.info-container {
  padding: 15px;
}

.info-container h3 {
  margin-bottom: 5px;
  font-size: 18px;
}

.info-container p {
  margin-bottom: 10px;
  font-size: 14px;
  color: #666;
}

.ratings-and-fee {
  display: flex;
  justify-content: space-between;
}

.rating {
  color: #f9c74f;
  font-size: 16px;
}

.consultation-fee {
  font-size: 16px;
  color: #2196f3;
}

.fas {
  margin-right: 5px;
}

</style>

<%= javascript_include_tag "quantity_selector" %>
<div class="doctor-cards-container">
    <% @medicines.each do |medicine| %>
     <%= render partial:"patients/each_medicine" , locals:{medicine:medicine}%>
    <% end %>
</div>

