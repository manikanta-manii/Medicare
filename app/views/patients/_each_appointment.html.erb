<%= stylesheet_link_tag "all_appointment" %>
 <div class="appointment-container">
    <h1>Medicare Appointment</h1>
    <%= image_tag(User.find(Doctor.find(appointment.doctor_id).user_id).avatar.attached? ? User.find(Doctor.find(appointment.doctor_id).user_id).avatar : 'avatars/default_avatar.png', class: "doctor-image") %>
    <div class="doctor-info">
      Doctor: <%= User.find(appointment.doctor.user_id).name %>
    </div>
    <div class="doctor-info">
      Slot Time: <%= Time.strptime(appointment.slot_time, "%Y-%m-%d %H:%M:%S %z").strftime("%A, %B %d, %Y , %I:%M %p") %>
    </div>
    <div class="doctor-info">
      Reason: <%= appointment.reason %>
    </div>
    <div class="status <%= appointment.status.downcase %>">
      Status: <%= appointment.status %>
    </div>
  </div>
