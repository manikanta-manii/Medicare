 <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      margin: 0;
      background-color:#DFF5FF;
    }
    .card-title{
        color: #00215E; 
    }
    .head{
        color:#00215E;
        text-align:center;
        font-size:2rem;
    }

    .card-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card {
      border: 1px solid #ccc;
      border-radius: 5px;
      overflow: hidden;
      margin: 10px;
      width:30rem;
      display: inline-block;
    }

    .card-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-body {
      padding: 20px;
    }
    .btnn{
        font-size:1.5rem;
        color:#00215E;
       width:15rem;
    }

    .card-footer {
      padding: 10px 20px;
      background-color: #f5f5f5;
      text-align: center;
    }
  </style>
  <h4 class="head">Doctor Dashboard</h4>
<div class="card">
  <img class="card-img" src="https://t3.ftcdn.net/jpg/02/60/79/68/360_F_260796882_QyjDubhDDk0RZXV9z7XBEw9AKnWCizXy.jpg" alt="Card Image">
  <div class="card-body">
    <h5 class="card-title" >Appointments</h5>
    <p class="card-text">See All Your Appointments<br>You should [ prescribe Medicines ] </p>
  </div>
  <div class="card-footer">
      <%= button_to "View", appointments_path,method: :get,class: "btn btnn btn-outline-success" %>
  </div>
</div>
