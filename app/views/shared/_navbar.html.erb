<style>
  .make-fixed{
    position:fixed;
    top:0;
    width:100%;
    z-index:2;
  }
</style>
<nav class="navbar navbar-expand-lg navbar-light make-fixed" style="background-color: #e3f2fd;">
  <div class="container-fluid">
    <%= link_to "Medicare", root_path, method: :get, class: "navbar-brand" %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>  
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent"> 
      <% if current_user %>
        <% if current_user.admin? %>
          <h4>ADMIN</h4>
        <% elsif current_user.doctor? %>
          <h4>Doctor</h4>
        <% else %> 
          <h4>USER</h4>
        <% end %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger mx-2" %>
      <% else %>
      <%= link_to "SignIn", new_user_session_path, method: :get, class: "btn btn-outline-success mx-2" %>
        <%= link_to "SignUp", new_user_registration_path, method: :get, class: "btn btn-success mx-2" %>
      <%= link_to "Admin", root_path, method: :get, class: "btn btn-info" %>     
      <% end %>
    </div>
  </div>
</nav>


